@model IEnumerable<Item>           
           
<form class="navbar-form navbar-left" asp-controller="Search" asp-action="SearchResult">
    <div class="form-group">
        <input type="text" name="SearchString" class="form-control" placeholder="Wpisz wyszukiwaną treść">
    </div>
    <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>

    <div class="custom-control custom-radio custom-control-inline">
    <input type="radio" class="custom-control-input" id="Title" name="Title">
    <label class="custom-control-label">Tytuł</label>
    </div>

    <div class="custom-control custom-radio custom-control-inline">
    <input type="radio" class="custom-control-input" id="Author" name="Author">
    <label class="custom-control-label">Autor</label>
    </div>
</form>

<table class="table" style="background-color:azure">
    <thead>
        <tr>
            <th>Okładka</th>
            <th>Tytuł</th>
            <th>Autor</th>
            <th>Rok produkcji</th>
            <th>Typ nośnika</th>
            <th>Wypożyczony?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.Cover" height="100" width="100" /></td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.AuthorName)</td>
                <td>@Html.DisplayFor(modelItem => item.Year)</td>
                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                <td>@Html.DisplayFor(modelItem => item.IsRent)</td>
            </tr>
        }
    </tbody>
</table>